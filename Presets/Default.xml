  <Visuals>
    <AmbientLight>
      <RadiationToAmbienceBrightness>0.001</RadiationToAmbienceBrightness>
      <MaxAmbienceBrightness>1</MaxAmbienceBrightness>
      <AmbienceNoiseAmplitude>0.5</AmbienceNoiseAmplitude>
      <ActualColor>32,0,255,255</ActualColor>
      <PerlinNoiseFrequency>0.05</PerlinNoiseFrequency>
      <RadiationAmountOffset>100</RadiationAmountOffset>
    </AmbientLight>
    <MapRender>
      <AreaColor>0,16,32,160</AreaColor>
      <BorderColor>0,127,255,200</BorderColor>
    </MapRender>
  </Visuals>
  <RadiationEffects>
    <MoreMonsters>
      <TooMuchEvenForMonsters>-1</TooMuchEvenForMonsters>
      <RadiationToMonstersMult>0</RadiationToMonstersMult>
      <MaxRadiationToMonstersMult>2</MaxRadiationToMonstersMult>
    </MoreMonsters>
    <DamageToElectronics>
      <DamageInterval>1</DamageInterval>
      <RadAmountToDPS>0.002</RadAmountToDPS>
      <MaxDPS>1.5</MaxDPS>
    </DamageToElectronics>
    <DamageToCharacters>
      <RadAmountToDPS>0.001</RadAmountToDPS>
      <Affliction>radiationsickness</Affliction>
    </DamageToCharacters>
    <DamageToMonsters>
      <BuffMonsters>True</BuffMonsters>
    </DamageToMonsters>
  </RadiationEffects>
  <RadiationProgress>
    <LocationsTransform>
      <KeepSurroundingOutpostsAlive>True</KeepSurroundingOutpostsAlive>
      <CriticalOutpostRadiationAmount>2000</CriticalOutpostRadiationAmount>
      <MinimumOutpostAmount>3</MinimumOutpostAmount>
    </LocationsTransform>
    <RadiationMoving>
      <TargetSpeedPercentageAtTheEndOfTheMap>0.5</TargetSpeedPercentageAtTheEndOfTheMap>
      <StartingRadiation>-100</StartingRadiation>
      <RadiationSpeed>40</RadiationSpeed>
      <MaxTimeOnRound>60</MaxTimeOnRound>
      <MinTimeOnRound>0.5</MinTimeOnRound>
      <OutpostTimeMultiplier>0.25</OutpostTimeMultiplier>
    </RadiationMoving>
    <SaveAndQuitAction>
      <AdvanceOnSaveAndQuit>True</AdvanceOnSaveAndQuit>
    </SaveAndQuitAction>
  </RadiationProgress>
  <RadiationProtection>
    <WaterRadiationBlocking>
      <WaterRadiationBlockPerMeter>0.6</WaterRadiationBlockPerMeter>
    </WaterRadiationBlocking>
    <HullRadiationProtection>
      <MainSub>0.5</MainSub>
      <Beacon>1</Beacon>
      <Outpost>1</Outpost>
      <EnemySub>1</EnemySub>
      <Wreck>0.75</Wreck>
      <Ruins>1</Ruins>
      <Cave>0.75</Cave>
    </HullRadiationProtection>
    <HuskRadiationProtection>
      <HuskRadiationResistance>0.5</HuskRadiationResistance>
      <HuskInfectionThreshold>75</HuskInfectionThreshold>
    </HuskRadiationProtection>
    <HullRadProtectionUpgrades>
      <HullUpgradeProtection>0.1</HullUpgradeProtection>
    </HullRadProtectionUpgrades>
  </RadiationProtection>
  <RadiationUpdate>
    <CharacterDamageInterval>1</CharacterDamageInterval>
  </RadiationUpdate>
  <Vanilla>
    <OverrideVanillaSettings>False</OverrideVanillaSettings>
    <StartingRadiation>-100</StartingRadiation>
    <RadiationStep>100</RadiationStep>
    <RadiationEffectMultipliedPerPixelDistance>250</RadiationEffectMultipliedPerPixelDistance>
    <CriticalRadiationThreshold>10</CriticalRadiationThreshold>
    <MinimumOutpostAmount>3</MinimumOutpostAmount>
    <RadiationDamageDelay>10</RadiationDamageDelay>
    <RadiationDamageAmount>1</RadiationDamageAmount>
    <MaxRadiation>-1</MaxRadiation>
