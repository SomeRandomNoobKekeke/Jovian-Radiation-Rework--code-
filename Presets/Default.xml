<?xml version="1.0" encoding="utf-8"?>
<MainConfig>
  <EnabledModels>
    <AmbientLightModel>True</AmbientLightModel>
    <RadProtectionUpgradesModel>True</RadProtectionUpgradesModel>
    <IndoorProtectionModel>True</IndoorProtectionModel>
    <HuskRadiationResistanceModel>True</HuskRadiationResistanceModel>
    <DepthBasedDamageModel>True</DepthBasedDamageModel>
    <SmoothRadiationProgressModel>True</SmoothRadiationProgressModel>
    <CustomMapRadiationDrawerModel>True</CustomMapRadiationDrawerModel>
    <SmoothLocationTransformerModel>True</SmoothLocationTransformerModel>
    <MoreMonstersModel>True</MoreMonstersModel>
    <DamageToElectronicsModel>True</DamageToElectronicsModel>
    <CustomMonsterDamagerModel>True</CustomMonsterDamagerModel>
    <CustomCharacterDamagerModel>True</CustomCharacterDamagerModel>
    <CustomRadiationUpdaterModel>True</CustomRadiationUpdaterModel>
