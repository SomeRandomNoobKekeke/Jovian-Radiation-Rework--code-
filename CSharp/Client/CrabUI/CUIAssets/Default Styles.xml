<?xml version="1.0" encoding="utf-8"?>
<DefaultStyles>
  <CUIComponent>
    <BackgroundColor>CUIPalette.Current.Component.Background</BackgroundColor>
    <BorderColor>CUIPalette.Current.Component.Border</BorderColor>
  </CUIComponent>

  <CUITextBlock>
    <TextColor>CUIPalette.Current.Text.Text</TextColor>
    <BorderColor>CUIPalette.Current.Text.Border</BorderColor>
    <BackgroundColor>CUIPalette.Current.Text.Background</BackgroundColor>
    <Padding>[4,0]</Padding>
  </CUITextBlock>

  <CUITextInput>
    <TextColor>CUIPalette.Current.Input.Text</TextColor>
    <BorderColor>CUIPalette.Current.Input.Border</BorderColor>
    <BackgroundColor>CUIPalette.Current.Input.Background</BackgroundColor>
  </CUITextInput>

  <CUIButton>
    <MasterColorOpaque>CUIPalette.Current.ButtonOn.Background</MasterColorOpaque>
    <BorderColor>CUIPalette.Current.Button.Border</BorderColor>
    <DisabledColor>CUIPalette.Current.ButtonDisabled.Background</DisabledColor>
    <Padding>[4,2]</Padding>
    <TextAlign>[0.5,0.5]</TextAlign>
  </CUIButton>

  <CUIDropDown>
    <BackgroundColor>CUIPalette.Current.DDButton.Background</BackgroundColor>
    <BorderColor>CUIPalette.Current.DDButton.Border</BorderColor>
  </CUIDropDown>

  <DDOption>
    <InactiveColor>CUIPalette.Current.DDOption.Background</InactiveColor>
    <BorderColor>CUIPalette.Current.DDOption.Border</BorderColor>
    <MouseOverColor>CUIPalette.Current.DDOptionHover.Background</MouseOverColor>
    <TextColor>CUIPalette.Current.DDOption.Text</TextColor>
    <TextAlign>[0,0]</TextAlign>
    <Padding>[4,0]</Padding>
  </DDOption>

  <CUIToggleButton>
    <MasterColorOpaque>CUIPalette.Current.ButtonOn.Background</MasterColorOpaque>
    <BorderColor>CUIPalette.Current.Button.Border</BorderColor>
    <DisabledColor>CUIPalette.Current.ButtonDisabled.Background</DisabledColor>
  </CUIToggleButton>

  <CUICanvas>
    <BackgroundColor>White</BackgroundColor>
    <BorderColor>Black</BorderColor>
  </CUICanvas>

  <CUIHorizontalList>
    <BackgroundColor>Transparent</BackgroundColor>
  </CUIHorizontalList>

  <CUIVerticalList>
    <BackgroundColor>Transparent</BackgroundColor>
  </CUIVerticalList>

  <CUIPages>
    <BackgroundColor>Transparent</BackgroundColor>
    <BorderColor>Transparent</BorderColor>
  </CUIPages>
</DefaultStyles>